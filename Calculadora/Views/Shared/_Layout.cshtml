<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Calculadora de Chang</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/css/calc.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="~/CalculadoraFuncional.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("CSS", false)


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="CalculadoraCon">
                    <img class="navbar-brand" src="~/img/logo.png" alt="Logo Calculadora" width="90px" height="100px" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 ">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="CalculadoraCon" style="font-family: 'Material Symbols Outlined';font-size: 22px;">Calculadora</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Historial" asp-action="VerOperaciones" style="font-family: 'Material Symbols Outlined';font-size: 22px;">HISTORIAL</a>
                        </li>
                    </ul>
                    @if (Estatico.IdConectado != 0)
                    {

                        <ul class="navbar-nav ">
                            <li class="nav-item ">
                                <a class="nav-link text-dark" asp-area="" asp-controller="UsuariosLR" asp-action="WatchUserAccount" style="font-family: 'Material Symbols Outlined';font-size: 18px;">
                                    <span class="material-symbols-outlined" style="vertical-align: bottom;">
                                        account_circle
                                    </span>@Estatico.UserName
                                </a>
                            </li>

                            <li class="nav-item ">
                                <!--Cuando le de aqui al  enlace lo que tiene que hacer es poner el Estatico.IdConectado a 0-->
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" style="font-family: 'Material Symbols Outlined';font-size: 18px;">
                                    <span class="" style="vertical-align: bottom;">
                                        Cerrar Sesion
                                    </span>

                                </a>
                            </li>

                        </ul>
                    }
                    else
                    {

                        <ul class="navbar-nav  ">
                            <li class="nav-item  ">
                                <a class="nav-link text-dark" asp-area="" asp-controller="UsuariosLR" asp-action="Conectarse" style="font-family: 'Material Symbols Outlined';font-size: 15px;">
                                    Iniciar Sesion
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>
