<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Calculadora de Chang</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" type="text/css" href="~/css/calc.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
	<link rel="stylesheet" href="~/CalculadoraFuncional.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="CalculadoraCon">
					<img class="navbar-brand" src="~/img/logo.png" alt="Logo Calculadora" width="100px" height="110px" />
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1 ">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="CalculadoraCon" >Calculadora</a>
						</li>
						@if (Estatico.IdConectado != 0)
						{
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-controller="Historial" asp-action="VerOperaciones" >Operaciones Realizadas</a>
							</li>
							<li class="nav-item ml-auto">
								<!--Cuando le de aqui al  enlace lo que tiene que hacer es poner el Estatico.IdConectado a 0-->
								<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Log-Out  </a>
							</li>
						}
						else
						{
							<li class="nav-item ml-auto">
								<a class="nav-link text-dark" asp-area="" asp-controller="UsuariosLR" asp-action="Conectarse">Log-in</a>
							</li>

						}
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/js/calc.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
